@model PREGUNTA_03_CRUD.Models.Venta

@{
    ViewData["Title"] = "Detalles de Venta";
    decimal subtotal = Model.Cantidad * Model.PrecioUnitario; 
}

<h1>@ViewData["Title"]</h1>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <h4>Detalles de la Venta</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

            <dt class="col-sm-3">Cantidad</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cantidad)</dd>

            <dt class="col-sm-3">Precio Unitario</dt>
            <dd class="col-sm-9">S/ @Model.PrecioUnitario.ToString("N2")</dd>

            <dt class="col-sm-3">Subtotal</dt>
            <dd class="col-sm-9">S/ @subtotal.ToString("N2")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
